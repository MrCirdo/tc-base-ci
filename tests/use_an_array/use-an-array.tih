type int_array = array of int
function max_search(arr: int_array, size: int) : int = (
    if size <= 0 then
        -1
    else
        let
            var max := 0
        in
            (
                for i := 0 to size do
                    if arr[i] > arr[max] then
                        max := i;
                max
            )
        end
)
